<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--Margen inferior para salvar el navigationButtom-->
    <style name="StyleMargenParaNB">
        <item name="android:layout_marginBottom">80dp</item>
    </style>

    <!--estilo boton navigation-->
    <style name="StyleNavigationButtton">
        <item name="itemTextColor">@color/white</item>
        <item name="itemIconTint">@color/color_selector_bottom_nav</item>
        <item name="android:background">@color/Azul_oscuro</item>
        <item name="android:itemIconDisabledAlpha">@color/rojo</item>
    </style>

    <!--**********estilos lista pokemons capturados*********-->

    <!--estilo para el carView (dia)-->
    <style name="StyleCardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">18dp</item>
        <item name="cardElevation">16dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="cardBackgroundColor">@color/amarillo</item>
    </style>

    <!--estilo para imagen de personaje del carView (comun)-->
    <style name="StyleImageCardView">
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">0dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <!--estilo texto del carView titulo pkCapturados-->
    <style name="StyleTextCardView">
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/ketchum</item>
    </style>

    <!--estilo texto carview-->
    <style name="StyleTextCarviewTipo">
        <item name="android:textSize">20dp</item>
        <item name="fontFamily">@font/pokemon_x_and_y</item>
        <item name="android:paddingStart">20dp</item>
    </style>

    <!--**********estilos lista pokemons Disponibles*********-->

    <!--estilo texto del carView pkDisponibles-->
    <style name="StyleTextCardViewDisponible">
        <item name="android:paddingStart">40dp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:textColor">@color/Azul_oscuro</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/ketchum</item>
    </style>

    <!--**********estilos lista ventana detalles pokemons*********-->

    <!--estilo texto detalle-->
    <style name="StyleTextDetalle">
        <item name="android:textSize">25dp</item>
        <item name="fontFamily">@font/pokemon_x_and_y</item>
        <item name="android:paddingStart">120dp</item>
    </style>

    <!--estilo texto detalle titulo-->
    <style name="StyleTextDetalleTitulo">
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:paddingBottom">25dp</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/ketchum</item>
    </style>

    <!--estilo texto detalle titulo detalle Horizontal-->
    <style name="StyleTextDetalleTituloDetalle">
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:paddingBottom">25dp</item>
        <item name="android:paddingStart">60dp</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/ketchum</item>
    </style>
</resources>